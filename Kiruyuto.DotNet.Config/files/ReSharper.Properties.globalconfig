is_global = true

# ====================================================================================================
# Description: Contains ReSharper-specific code analysis rules
# Help link: https://www.jetbrains.com/help/resharper/Reference__Code_Inspections_CSHARP.html
# ====================================================================================================


# Additional ReSharper-specific rules
resharper_csharp_max_line_length = 220
resharper_max_attribute_length_for_same_line = 120
resharper_class_never_instantiated_global_highlighting = none
resharper_template_is_not_compile_time_constant_problem_highlighting = error

# Code inspection: Redundant empty argument list on object creation expression
# Help link: https://www.jetbrains.com/help/resharper/RedundantEmptyObjectCreationArgumentList.html
resharper_redundant_empty_object_creation_argument_list_highlighting = error

# Code inspection: The relationship defined by this property contributes to a dependency loop
# Help link: https://www.jetbrains.com/help/resharper/EntityFramework.ModelValidation.CircularDependency.html
resharper_entity_framework_model_validation_circular_dependency_highlighting = error

# Code inspection: Use preferred style of 'new' expression when created type is evident
# Help link: https://www.jetbrains.com/help/resharper/ArrangeObjectCreationWhenTypeEvident.html
resharper_arrange_object_creation_when_type_evident_highlighting = error

# Code inspection: Auto-property can be made get-only (non-private accessibility)
# Help link: https://www.jetbrains.com/help/resharper/AutoPropertyCanBeMadeGetOnly.Global.html
resharper_auto_property_can_be_made_get_only_global_highlighting = none

# Code inspection: Class with virtual (overridable) members never inherited (non-private accessibility)
# Help link: https://www.jetbrains.com/help/resharper/ClassWithVirtualMembersNeverInherited.Global.html
resharper_class_with_virtual_members_never_inherited_global_highlighting = none

# Code inspection: Use preferred style for trailing comma before new line in multiline lists
# Help link: https://www.jetbrains.com/help/resharper/ArrangeTrailingCommaInMultilineLists.html
resharper_arrange_trailing_comma_in_multiline_lists_highlighting = error

# Code inspection: Redundant using directive
# Help link: https://www.jetbrains.com/help/resharper/RedundantUsingDirective.html
resharper_redundant_using_directive_highlighting = warning

# Code inspection: Type is never used (non-private accessibility)
# Help link: https://www.jetbrains.com/help/resharper/UnusedType.Global.html
resharper_unused_type_global_highlighting = warning

# Code inspection: Property can be made init-only (non-private accessibility)
# Help link: https://www.jetbrains.com/help/resharper/PropertyCanBeMadeInitOnly.Global.html
resharper_property_can_be_made_init_only_global_highlighting = warning

# Help link: https://www.jetbrains.com/help/resharper/EditorConfig_CSHARP_LineBreaksPageSchema.html#resharper_csharp_wrap_object_and_collection_initializer_style
# Note: Provides sort of override for "csharp_new_line_before_members_in_object_initializers = true/false" issues (https://youtrack.jetbrains.com/issue/RSRP-486359/csharpnewlinebeforemembersinobjectinitializers-true-doesnt-add-line-breaks-for-each-initializer)
#       Disabled until all issues are resolved
# resharper_wrap_object_and_collection_initializer_style = chop_always