{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "pull-request-title-pattern": "chore(${component}): Release v${version}",
  "group-pull-request-title-pattern": "chore(ci): Release `${branch}`",
  "separate-pull-requests": true,
  "prerelease": false,
  "draft-pull-request": false,
  "pull-request-header": "ðŸ‘‡ Changelog ðŸ‘‡",
  "include-v-in-tag": false,
  "packages": {
    ".": {
      "component": "config",
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple",
      "component-no-space": true,
      "exclude-paths": [
        ".github"
      ]
    }
  },
  "plugins": [
    "sentence-case"
  ],
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features & Enhancements",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "ci",
      "section": "CI/CD",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "Chores",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "Documentation improvements",
      "hidden": false
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "style",
      "section": "Style changes",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Refactors",
      "hidden": false
    },
    {
      "type": "perf",
      "section": "Performance improvements",
      "hidden": false
    }
  ]
}