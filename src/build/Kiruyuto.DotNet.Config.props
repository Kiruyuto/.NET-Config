<Project>
  <PropertyGroup Label="Shared settings applicable to all build configurations">
    <Nullable Condition="'$(Nullable)' == ''">enable</Nullable>
    <AllowUnsafeBlocks Condition="'$(AllowUnsafeBlocks)' == ''">true</AllowUnsafeBlocks>
    <ImplicitUsings Condition="'$(ImplicitUsings)' == ''">enable</ImplicitUsings>

    <!-- https://learn.microsoft.com/en-us/dotnet/csharp/language-reference/compiler-options/code-generation#deterministic -->
    <Deterministic>true</Deterministic>

    <!-- https://learn.microsoft.com/en-us/dotnet/core/project-sdk/msbuild-props#publishdocumentationfile -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <ItemGroup Condition="'$(Language)' == 'C#' AND ('$(ImplicitUsings)' == 'true' or '$(ImplicitUsings)' == 'enable')">
      <Using Include="System.Diagnostics.CodeAnalysis" />
      <Using Include="System.Text" />
    </ItemGroup>
  </PropertyGroup>

  <PropertyGroup Label="Shared settings evaluated only in 'Release' build configuration" Condition="'$(Configuration)' == 'Release'">
    <Optimize>true</Optimize>
    <DebugType Condition="'$(DebugType)' == ''">embedded</DebugType>
  </PropertyGroup>
</Project>